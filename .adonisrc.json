{
  "typescript": true,
  "commands": [
    "./commands",
    "@adonisjs/core/build/commands/index.js",
    "@adonisjs/repl/build/commands",
    "@adonisjs/lucid/build/commands",
    "@adonisjs/mail/build/commands",
    "@adonisjs/bouncer/build/commands"
  ],
  "exceptionHandlerNamespace": "App/Exceptions/Handler",
  "aliases": {
    "Domains": "domains",
    "App": "app",
    "Apps": "apps",
    "Config": "config",
    "Database": "database",
    "Contracts": "contracts",
    "Services": "services"
  },
  "preloads": [
    "./start/routes",
    "./apps/manager/routes",
    "./apps/web/routes",
    "./start/view",
    "./start/kernel",
    {
      "file": "./start/validator",
      "environment": [
        "web"
      ]
    },
    "./start/bouncer"
  ],
  "providers": [
    "./providers/AppProvider",
    "./providers/UnpolyProvider",
    "./providers/I18nProvider",
    "@adonisjs/core",
    "@adonisjs/session",
    "@adonisjs/view",
    "@adonisjs/shield",
    "@adonisjs/lucid",
    "@adonisjs/auth",
    "@adonisjs/mail",
    "@adonisjs/i18n",
    "@adonisjs/redis",
    "@adonisjs/attachment-lite",
    "@adonisjs/lucid-slugify",
    "@adonisjs/bouncer"
  ],
  "metaFiles": [
    {
      "pattern": "public/**",
      "reloadServer": false
    },
    {
      "pattern": "resources/views/**/*.edge",
      "reloadServer": false
    },
    {
      "pattern": "apps/**/resources/**/*.edge",
      "reloadServer": false
    },
    {
      "pattern": "apps/**/lang/**/*.{yaml,yml}",
      "reloadServer": false
    },
    "resources/lang/**/*.(json|yaml)"
  ],
  "aceProviders": [
    "@adonisjs/repl"
  ],
  "tests": {
    "suites": [
      {
        "name": "functional",
        "files": [
          "tests/functional/**/*.spec(.ts|.js)"
        ],
        "timeout": 60000
      }
    ]
  },
  "testProviders": [
    "@japa/preset-adonis/TestsProvider"
  ]
}