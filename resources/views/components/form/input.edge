<div class="flex flex-col max-w-md pb-5">
  <label>
    {{ label }}
    @if(required)
      *
    @end
  </label>

  <input
    id="{{ name }}"
    name="{{ name }}"
    type="{{ type ? type : 'text' }}"
    class="border border-gray-200 rounded-md px-3 py-1"

    @if(required)
      required
    @end

    @if(placeholder)
      placeholder="{{ placeholder }}"
    @endif

    value="{{ flashMessages.get(name, '') || '' }}"
  />

  @if(flashMessages.has(`errors.${name}`))
    <div class="bg-red-200 rounded-md mt-2 p-3 max-w-xl">
      <p class="text-red-600 text-sm">{{ flashMessages.get(`errors.${name}`) }}</p>
    </div>
  @end
</div>
